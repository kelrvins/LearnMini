/**index.wxss**/

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #fff;
}

.todo-top-bgimg {
  display: flex;
  flex-direction: row;
  position: fixed;
  /* height: 700rpx;  */
  width: 100%;
  z-index: 10;
}

.todo-wrapper {
  position: fixed;
  top: 0;
  bottom: 100rpx;
  left: 0;
  right: 0;
  z-index: 100;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.index-title {
  display: block;
  position: absolute;
  left: 30rpx;
  top: 220rpx;
  color: #fff;
  line-height: 60rpx;
  font-weight: bolder;
  font-size: 65rpx;
}

.current-date-text {
  display: block;
  position: absolute;
  left: 30rpx;
  top: 280rpx;
  color: #fff;
  font-size: 50rpx;
}

.todo-container {
min-height:100%;
  background: #fff;
  position: absolute;
  top: 360rpx;
  left: 0;
  right: 0;
  background: linear-gradient(#fff 99%, #ddd 1%);
  background-size: 100% 130rpx;
}

.todo-single {
  line-height: 130rpx;
  height: 130rpx;
  position: relative;
  display: flex;
  justify-content: space-between;
}

.todo-single-content {
  width: 100%;
  overflow: hidden;
  padding: 0 40rpx 0 0;
  transform: translateX(90px);
  margin-left: -90px;
}

.todo-single--del {
  background-color: orangered;
  width: 190rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid orangered;
  align-items: center;
  justify-content: center;
  color: #fff;
  transform: translateX(90px);
}

.todo-single--suc .todo-status-button {
  border:none;
}
.todo-single--suc .todo-status-button icon {
  display: block !important;
}

.todo-status-click {
  height: 130rpx;
  width: 130rpx;
  padding-left: 20rpx;
}

.todo-status-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
  border: 2rpx solid #aaa;
  border-radius: 50%;
}

.todo-status-text {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 80rpx;
  font-weight: 400;
}

.todo-status-tt {
  display: block;
  font-size: 32rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: normal;
  word-wrap: break-word;
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.todo-single--suc .todo-status-tt {
  text-decoration: line-through;
  color: #555;
}

.todo-status-type {
  display: block;
  font-size: 25rpx;
  line-height: 35rpx;
  color: #333;
}

.todo-single--suc .todo-status-type {
  color: #999;
}

.todo-single-add {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  line-height: 100rpx;
  height: 100rpx;
  border-top: 1rpx solid #ddd;
  padding: 0 20rpx;
  z-index: 101;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  z-index: 102;
  overflow: hidden;
  box-shadow: 0 3rpx 3rpx 1rpx #ddd;
}

.todo-container-end {
  height: 120rpx;
}
