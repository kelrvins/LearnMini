/**index.wxss**/

page {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #ddd;
  /* background-image: url('http://kelrvins.oss-cn-beijing.aliyuncs.com/18-6-23/6364562.jpg'); */
}

.todo-top-bgimg {
  display: flex;
  flex-direction: row;
  position: fixed;
  height: 700rpx;
  width: 100%;
  z-index: 10;
}

.todo-wrapper {
  position: fixed;
  top: 0;
  bottom: 100rpx;
  left: 0;
  right: 0;
  z-index: 100;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
}

.index-title {
  display: block;
  position: absolute;
  left: 30rpx;
  top: 220rpx;
  line-height: 60rpx;
  font-weight: bolder;
  font-size: 65rpx;
}

.current-date-text {
  display: block;
  position: absolute;
  left: 30rpx;
  top: 280rpx;
  font-size: 50rpx;
}

.todo-container {
  background: #fff;
  position: absolute;
  top: 360rpx;
  bottom: 0;
  left: 0;
  right: 0;
}

.todo-single {
  line-height: 130rpx;
  height: 130rpx;
  border-bottom: 1px solid #ddd;
  padding: 0 20rpx;
  background-color: #fff;
  position: relative;
}

.todo-status-button {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 35rpx;
  height: 35rpx;
  border: 2rpx solid #aaa;
  border-radius: 50%;
}

.todo-status-text {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: 80rpx;
  font-weight: 400;
}

.todo-status-tt {
  display: block;
  font-size: 32rpx;
  line-height: 40rpx;
}

.todo-status-type {
  display: block;
  font-size: 25rpx;
  line-height: 35rpx;
  color: #333;
}

.todo-single-add {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  line-height: 100rpx;
  height: 100rpx;
  border-top: 1rpx solid #ddd;
  padding: 0 20rpx;
  z-index: 101;
}

.todo-single-add-icon {
  position: absolute;
  top: 50%;
  transform: translateY(-55%);
  font-size: 60rpx;
  font-weight: 100;
}

.todo-single-add-text {
  position: absolute;
  top: 50%;
  left: 70rpx;
  transform: translateY(-50%);
  font-size: 30rpx;
  line-height: 100rpx;
}

.userinfo-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 5rpx solid #fff;
  position: fixed;
  top: 30rpx;
  right: 30rpx;
  z-index: 102;
  box-shadow:  0 3rpx 3rpx 1rpx #ddd;
}
